<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dip"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:editable="false"
            android:hint="@string/input_hint"
            android:cursorVisible="false"
            android:gravity="right"
            android:id="@+id/inputText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:paddingTop="10dip">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:onClick="onButtonPressed"
                    android:textColor="@color/special_key_text"
                    android:layout_weight="1"
                    android:text="MR" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:onClick="onButtonPressed"
                    android:textColor="@color/special_key_text"
                    android:layout_weight="1"
                    android:text="M+" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:onClick="onButtonPressed"
                    android:textColor="@color/special_key_text"
                    android:layout_weight="1"
                    android:text="M-" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/button_DEL"
                    android:onClick="onButtonPressed"
                    android:textColor="@color/special_key_text_2"
                    android:layout_weight="1"
                    android:text="@string/del_button_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="4" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="7" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="(" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="2" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="5" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="8" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text=")" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="3" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="6" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="9" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="-" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="*" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="/" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="+" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/special_key_text"
                    android:onClick="onButtonPressed"
                    android:text="CL" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:onClick="onButtonPressed"
                    android:text="%" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:textColor="@color/special_key_text_2"
                    android:onClick="onButtonPressed"
                    android:text="=" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/memory_fragment_container"
            android:orientation="horizontal"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"></LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>

</FrameLayout>
